// http://www.jshint.com/docs/options/
// Comments are allowed in this file but otherwise it should be valid JSON
// Edits to this file should most likely also be made to `.jshint-for-tests`
// Run it: `jshint app`
{
  // Environment options
  "browser": true,
  "devel": true,
  "esnext": true,

  // Relaxing options
  "asi": true,

  // Stricter options
  "bitwise": true,
  "curly": true,
  "eqeqeq": true,
  "freeze": true,
  "noarg": true,
  "nonew": true,
  "unused": true,
  "quotmark": "single",

  // Global variables
  "predef": [
    "angular",
    "_"
  ]
}
